<h1>Create a new Trip</h1>

<form action="/trips" method="POST">

  <label>Name:</label>

  <br>

  <input type="string" name="trip[name]">

  <br>

  <label>Start date:</label>

  <br>

  <input type="date" name="trip[start_date]">

  <br>
  
  <label>End date:</label>

  <br>

  <input type="date" name="trip[end_date]">

  <br>

  <fieldset name="trip[country]" >
     <label>Select country</label>
     <select id = "myList">
     <%Country.all.each_with_index do |c, index|%>
      <option value = <%index+=1%> ><%=c.name%></option>
      <%end%>
     </select>
</fieldset>

  <input type="submit" value="Create Trip">

</form>